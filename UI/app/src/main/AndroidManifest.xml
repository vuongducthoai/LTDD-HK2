<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UI"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Set LoginActivity as the Main activity -->
        <activity
            android:name=".Activity.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Remove intent-filter from Product_Detail -->
        <activity
            android:name=".Activity.Product_Detail"
            android:exported="true" />

        <!-- Other activities -->
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true" />

        <activity
            android:name=".Activity.CartActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.ForgetPassword"
            android:exported="false" />

        <activity
            android:name=".Activity.OTPVerification"
            android:exported="false" />

        <activity
            android:name=".Activity.Register"
            android:exported="false"/>

        <activity
            android:name=".Activity.UpdatePassword"
            android:exported="false"/>

        <activity
            android:name=".Activity.UpdatePasswordSuccess"
            android:exported="false"/>

        <activity
            android:name=".Activity.SignInSuccessful"
            android:exported="false"/>

    </application>

</manifest>
