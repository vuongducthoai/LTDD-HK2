<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomAdapterListView"
        tools:targetApi="31">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.customadapterlistview.activity.CustomAdapterListViewActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.ListViewActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.GridViewActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.CustomAdapterGridViewActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.RecycleViewActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.UserActivity"
            android:exported="true" />

        <activity android:name="com.example.customadapterlistview.activity.MainAnimationActivity"
            android:exported="true" />
    </application>
</manifest>